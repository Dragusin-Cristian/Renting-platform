<%- include('../includes/head.ejs') %>

  <body>
    <%- include('../includes/navbar.ejs') %>
      <main>
        <div class="marginTopAfterNavBar">
          <div class="formContainer">
            <h2>Edit account details</h2>
            <form action="/auth/edit-account-details" method="post">
              <div class="inputContainer">
                <label for="name">Name</label>
                <input type="text" name="name" required value="<%= name %>">
              </div>
              <div class="inputContainer">
                <label for="email">Email</label>
                <input type="email" name="email" required value="<%= email %>">
              </div>
              <div class="actionsContainerSpaceEvenly">
                <button class="roundedCornersAction loginAction liftUpOnHover">Update account</button>
              </div>
            </form>
          </div>
        </div>
        <%- include('../includes/error.ejs') %>
      </main>